<% include ../partials/header  %>

<div class="container-fluid">
   <h1>Showz me the Campground!</h1>

   <div class="row">
         <div class="col mt-2"> <!--left sidebar navigation/info-->
            <ul class="list-group">
              <li class="list-group-item active">Cras justo odio</li>
              <li class="list-group-item">Dapibus ac facilisis in</li>
              <li class="list-group-item">Morbi leo risus</li>
              <li class="list-group-item">Porta ac consectetur ac</li>
              <li class="list-group-item">Vestibulum at eros</li>
            </ul>
         </div>





         <div class=" col-9">  <!--main "show" content wrapper & comments-->
            <div class="card mt-2 "> <!--card wrapper-->
               <img class="card-img-top rounded mx-auto " src="<%= cgdetail.url %>" alt="Card image ">
               <div class="card-body">
              <strong><h4 class="card-title d-inline-block"><%= cgdetail.name %></h4></strong><h4 class="d-inline-block float-right"><strong>$5.00/night</strong></h4> 
            <em>  <p>submitted by <%= cgdetail.author.username %></p></em>
               <p class="card-text"><%= cgdetail.description %></p>
                <% if(currentUser && cgdetail.author.id.equals(currentUser._id)){ %>
                        <a href="/campgrounds/<%=cgdetail._id %>/edit" class="btn btn-primary">Editz me</a>
                <% } %>
             
               </div>
            </div> <!--/card wrapper-->
            <div class=" d-block p-2 text-right "> <!--/btn wrapper-->
               <a class=" btn btn-success" href="/campgrounds/<%= cgdetail._id %>/comments/new">Add sweet comment!</a>
            </div>
                  <div class=" "> <!--comments wrapper-->
                  <% cgdetail.comments.forEach(function(comment) { %>
                        <div class="media p-2 bg-light ">
                          <img class="align-self-center mr-3" style="max-width: 64px; "src="<%= cgdetail.url %>" alt="Generic placeholder image">
                          <div class="media-body">
                            <h5 class="d-inline mt-0"><%= comment.author.username %></h5> <span class=" float-right" >Imagine a timestamp here</span>
                          <p> <%= comment.text %> </p> 
                           <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                          
                                <div> 
                                <a class="btn btn-secondary btn-sm d-inline-block" href="/campgrounds/<%= cgdetail._id %>/comments/<%= comment._id  %>/edit">Editz</a>
                                <form class="d-inline-block" action="/campgrounds/<%= cgdetail._id %>/comments/<%=comment._id%>?_method=DELETE" method="POST">
                                <button class="btn btn-danger btn-sm" type="submit" >Deletz</button>
                                </form>
                                </div>
                            <% } %>
                             
                          </div>
                        </div>
                  
                    
                  <% }) %>
               
            </div>  <!--/comments wrapper-->
      </div>
   </div>
         

</div>
        

<% include ../partials/footer  %>
         
