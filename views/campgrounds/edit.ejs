<% include ../partials/header  %>

   <div class="container">
      <h1 class="d-flex justify-content-center">Editz me the Campground!</h1>
      <div class="mx-auto" style="width: 30%;">
         <form action="/campgrounds/<%=campground._id%>?_method=PUT " method="POST">
            <div class="form-group ">
               <input class="form-control " type="text " name="campground[name]" placeholder="photo name" value="<%=campground.name%>" />
            </div>
            <div class="form-group ">
               <input class="form-control " type="url " name="campground[url]" placeholder="photo name" value="<%=campground.url%>" />
            </div>
            <div class="form-group ">
               <textarea class="form-control " rows="3" name="campground[description]" placeholder="Enter a comment" ><%=campground.description%></textarea>
            </div>
            
           
            <div class="form-group">
               <button class="btn btn-lg btn-primary btn-block  ">Update!</button>
            </div>
         </form>
         <form class="form-group " action="/campgrounds/<%=campground._id%>?_method=DELETE " method="POST">
               <button class="btn btn-lg btn-danger btn-block form-control  ">Deletz!</button>
         </form>
          
        
         <a href="/campgrounds ">Go Back...</a>
      </div>

   </div>



   <% include ../partials/footer  %>



