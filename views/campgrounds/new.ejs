<% include ../partials/header  %>

   <div class="container">
      <h1 class="d-flex justify-content-center">Create a New Campground</h1>
      <div class="mx-auto" style="width: 30%;">
         <form action="/campgrounds" method="POST">
            <div class="form-group ">
               <input class="form-control " type="text " name="cgName" placeholder="photo name" />
            </div>
            <div class="form-group ">
               <input class="form-control " type="text " name="cgPhoto" placeholder="image url" />
            </div>
             <div class="form-group ">
               <textarea class="form-control " rows="3" name="cgDescription" placeholder="Enter a comment" ></textarea>
            </div>
            <div class="form-group">
               <button class="btn btn-lg btn-primary btn-block ">Submit!</button>
            </div>
         </form>
         <a href="/campgrounds ">Go Back...</a>
      </div>

   </div>




