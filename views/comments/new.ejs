<% include ../partials/header  %>

   <div class="container">
      <h1 class="d-flex justify-content-center">Add New Comment to <%= cg.name%>!</h1>
      <div class="mx-auto" style="width: 30%;">
         <form action="/campgrounds/<%= cg._id %>/comments" method="POST">
            <div class="form-group ">
               
               <textarea class="form-control " rows="3" name="comments[text]" placeholder="Enter a comment"></textarea>
            </div>
            <div class="form-group">
               <button class="btn btn-lg btn-primary btn-block ">Submit!</button>
            </div>
         </form>
         <a href="/campgrounds ">Go Back...</a>
      </div>

   </div>




   <% include ../partials/footer  %>


